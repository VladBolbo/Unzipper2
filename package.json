{
  "name": "detectpedestrian",
  "version": "1.0.0",
  "description": "Service Pedestrian detection OpenCV",
  "main": "index.js",
  "author": "VladB",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "ts-node ./src/index.ts",
    "dev": "nodemon -e pug,js,ts --ignore tests/**/*.spec.ts --exec",
    "dev2": "nodemon --watch src/**/*.ts --ignore tests/**/*.spec.ts --exec",
    "prod": "npm run ruild && npm run start",
    "test": "jest --verbose --coverage",
    "test:update": "jest --verbose --coverage --updateSnapshot",
    "test:watch": "jest --verbose --watch",
    "coverage": "jest --verbose --coverage && open ./coverage/lcov-report/index.html"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/mongoose": "^5.3.10",
    "body-parser": "^1.18.3",
    "dotenv": "^6.2.0",
    "jest": "^24.0.0",
    "nodemon": "^1.18.9",
    "pug": "^2.0.3",
    "ts-node": "^8.0.2",
    "typescript": "^3.2.4"
  },
  "dependencies": {
    "express": "^4.16.4",
    "mongoose": "^5.7.5"
  }
}
